<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/original_black_blurd"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Image Slider -->
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="352.5dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:autoStart="false">

            <!-- Static Images -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_banner1"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_banner2"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_banner3"
                android:scaleType="fitCenter" />
        </ViewFlipper>

        <!-- Dots Layout -->
        <LinearLayout
            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@id/viewFlipper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Dot 1 -->
            <ImageView
                android:id="@+id/dot1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/dot_unselected"
                android:layout_marginEnd="8dp"/>

            <!-- Dot 2 -->
            <ImageView
                android:id="@+id/dot2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/dot_unselected"
                android:layout_marginEnd="8dp"/>

            <!-- Dot 3 -->
            <ImageView
                android:id="@+id/dot3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/dot_unselected" />
        </LinearLayout>

        <!-- Cardview Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNewbie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#20FFFFFF"
                    android:layout_marginEnd="5.5dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:padding="12dp"
                        android:text="Newbie"
                        android:textColor="#FFF"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRookie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#12FFFFFF"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="5.5dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Rookie"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFF"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- ImageView for the vector drawable -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_lock_24"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-0dp"
                    android:layout_marginStart="-23dp"
                    app:tint="#20FFFFFF" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAdvanced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#12FFFFFF"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="5.5dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Advanced"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFF"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- ImageView for the vector drawable -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_lock_24"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-0dp"
                    android:layout_marginStart="-23dp"
                    app:tint="#20FFFFFF" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMaster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#12FFFFFF"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="5.5dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:text="Master"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="#FFF"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- ImageView for the vector drawable -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_lock_24"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-0dp"
                    android:layout_marginStart="-23dp"
                    app:tint="#20FFFFFF" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Cardview -->
        <GridLayout
